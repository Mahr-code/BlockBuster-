{
  "name": "blockbuster-news",
  "version": "1.0.0",
  "description": "Backend for Blockbuster News website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd blockbuster-news && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd blockbuster-news && npm install",
    "setup": "npm install && npm run install-client"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
